
{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // "${file}",
                "*.cpp",
                "-I/MYOPENGL/", //在此处可以配置include的路径
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "glad.c","-lGL","-lGLU","-lglut","-ldl","-Iglad/include",
                "-lGLEW", "-lglfw", "-lGL","-lX11", "-lpthread","-lXrandr"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
    ],
    "version": "2.0.0"
}
